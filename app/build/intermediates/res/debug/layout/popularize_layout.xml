<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <RadioGroup android:id="@+id/pop_rg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <RadioButton android:id="@+id/pop_rb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/search_radiobutton_bg"
            android:text="我的推广" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@color/color_detach_line" />

        <RadioButton android:id="@+id/pop_rb2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:textColor="@drawable/search_radiobutton_bg"
            android:text="下级加盟" />

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <cn.mstar.store.customviews.ProductCommentIndicatorView
            num="2"
            android:id="@+id/pop_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/color_gold_nor" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pop_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout><!-- From: file:/D:/A_Star_Project/MstarStoreAppStudio/app/src/main/res/layout/popularize_layout.xml -->