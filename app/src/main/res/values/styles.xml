<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!--<style name="AppBaseTheme" parent="Theme.AppCompat.Light">-->

    <!--</style>-->

     <style name="AppBaseTheme" parent="AppBaseTheme">

         <item name="android:windowNoTitle">true</item>
     </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. windowTranslucentStatus-->
        <item name="android:windowNoTitle">true</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/ActionBarStyle</item>
    </style>


    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/TitleBarTextColor</item>
        <item name="background">@color/status_bar_color</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="main_tab_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/tab_text_indicator</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="product_list">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/tab_productlist_indicator</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_exit</item>
    </style>
    <style name="Fiter_PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/filter_pop_enter</item>
        <item name="android:windowExitAnimation">@anim/filter_pop_exit</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarStyle.Base"/>

    <style name="ToolBarStyle.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolBarStyle.Event" parent="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/event_title_text_size</item>
    </style>

    <dimen name="event_title_text_size">18sp</dimen>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/myratingbarstyle</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">30dp</item>
    </style>
    
    <style name="share_anim_style" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/share_anim_show</item>
        <item name="android:windowExitAnimation">@anim/share_anim_hide</item>
    </style>

    <style name="progressbar_horizontal">
        <item name="android:maxHeight">30.5dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:minHeight">30.5dip</item>
    </style>
</resources>